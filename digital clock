import time
from datetime import datetime
import os

while True:

    os.system('cls' if os.name == 'nt' else 'clear')
    

    now = datetime.now()
    current_time = now.strftime("%H:%M:%S")
    

    print("‚è∞ Digital Clock")
    print("-----------------")
    print("     " + current_time)
    

    time.sleep(1)
